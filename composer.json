{
    "name": "ucrm-plugins/client-registration",
    "description": "A simple Client Registration Plugin for UCRM.",
    "license": "MIT",
    "authors": [
        {
            "name": "Ryan Spaeth",
            "email": "rspaeth@mvqn.net"
        }
    ],
    "require": {
        "php": "~7.3",
        "ext-json": "*",
        "ext-zip": "*",
        "ext-pdo": "*",

        "mvqn/localization": "1.*",
        "mvqn/twig": "1.*",

        "slim/slim": "^3.1",
        "slim/twig-view": "^2.0",
        "monolog/monolog": "^1.24",

        "phpunit/phpunit": "~8",
        "vlucas/phpdotenv": "2.5.*",

        "commerceguys/intl": "^1.0",
        "mvqn/ucrm-plugin-sdk": "^1.3",
        "mvqn/http": "^1.0"


    },
    "require-dev": {
        "composer/composer":  "^1.9",
        "consolidation/robo": "^1.4"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/server/App/"
        }
    },
    "autoload-dev": {
        "psr-4": {
        }
    },
    "scripts": {


        "test": [
            "robo test"
        ],


        "sync": [
            "upm sync"
        ],
        "create": [
            "upm create"
        ],
        "bundle": [
            "@composer client:build",
            "@composer server:build",
            "upm bundle"
        ],
        "bundle-only": [
            "upm bundle"
        ],



        "client:run": [
            "cd src/client/ && yarn serve"
        ],
        "client:update": [
            "cd src/client/ && yarn upgrade"
        ],
        "client:build": [
            "cd src/client/ && yarn build"
        ],
        "client:deploy": [
            "@client:update",
            "cd src/client/ && yarn build"
        ],

        "server:run": [
            "@php -S 0.0.0.0:80 -t src/ src/router.php"
        ],
        "server:update": [
            "@composer --no-interaction --verbose update"
        ],
        "server:build": [
            "@server:update"
        ]


    },
    "config": {
        "vendor-dir": "src/server/vendor/",
        "process-timeout": 0

    }

}
